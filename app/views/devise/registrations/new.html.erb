<div class=" d-flex flex-column align-items-center mt-5 pt-4 rounded-4" style="background: #ffffff85;; width: 20rem">
<h2 class="text-secondary mb-5 display-5" style="padding-right: 8rem;">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-control mb-3 border-0">
    <%= f.label :email%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"border-0" %>
  </div>
  
  <div class="field form-control mb-3 border-0">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"border-0" %>
  </div>

  <div class="field form-control mb-3 border-0">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"border-0" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class:"btn btn-primary"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>