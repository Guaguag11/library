<div class=" d-flex flex-column align-items-center mt-5 pt-4 rounded-4" style="background: #ffffff47; width: 30rem">
<h2 class="text-white mb-3 pt-1 display-6" style="padding-right: 18rem;">Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-control mb-3 border-0" style="width: 28rem;">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"border-0" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field form-control mb-3 border-0" style="width: 28rem;">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"border-0" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field form-control mb-3 border-0" style="width: 28rem;">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"border-0" %>
  </div>

  <div class="field form-control mb-3 border-0" style="width: 28rem;">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" , class:"border-0"%>
  </div>

  <div class="actions row">
    <%= f.submit "Update", class:"btn btn-primary col-5", style:"margin-left: 8rem;" %>
  </div>
<% end %>

<h3 class="text-black pt-3 pb-3">Cancel my account</h3>

<div class="d-flex flex-column align-items-center gap-2">Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class:"btn btn-danger" %></div>

<%= link_to "Back", :back, class:"pt-4 text-secondary pb-3" %>
</div>