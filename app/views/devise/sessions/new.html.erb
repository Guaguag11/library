<div class=" d-flex flex-column align-items-center mt-5 pt-4 rounded-4" style="background: #ffffff85;; width: 20rem;">
<h2 class="text-secondary mb-5 display-5" style="padding-right: 8rem;">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field form-control mb-3 border-0">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"border-0" %>
  </div>

  <div class="field form-control mb-3 border-0" style="width: 17rem;">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "current-password", class:"border-0" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field form-control mb-3 border-0">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class:"btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
